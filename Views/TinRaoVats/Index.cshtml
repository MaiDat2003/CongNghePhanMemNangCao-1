@model IEnumerable<CNPMNC.Models.TinRaoVat>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TieuDe)
            </th>
            <th>                
               
                @Html.DisplayNameFor(model => model.HinhAnh)
               
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NoiDung)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgayGioDang)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GiaTinDang)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiaChi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgayHetHan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HinhThucID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoaiTinID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CityID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TinhTrangID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrangThaiID)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TieuDe)
            </td>
            <td>
                
                <img src="@Url.Content(item.HinhAnh)" height="50" width="50" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoiDung)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayGioDang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GiaTinDang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayHetHan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.tenCategory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HinhThuc.tenHinhThuc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoaiTin.tenLoaiTin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City.tenThanhPho)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TinhTrang.tenTinhTrang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrangThai.tenTrangThai)
            </td>
            <td>
                @{ if (item.TrangThaiID == 2)
                    {
                        @Html.ActionLink("Duyệt Bài", "DuyetTin", new { id = item.TinRaoVatID }); <p>|</p>
                    }
                }
                <a asp-action="Edit" asp-route-id="@item.TinRaoVatID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TinRaoVatID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TinRaoVatID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
